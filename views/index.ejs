<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="./css/reset.css" type="text/css">
  <link rel="stylesheet" href="./css/base.css" type="text/css">
  <link rel="stylesheet" href="./css/layout.css" type="text/css">
  <link rel="stylesheet" href="./css/modules.css" type="text/css">
</head>
<body>
  <header>
    <h1>Anti-Socialite</h1>
  </header>

  <h2> Your evening alone starts here</h2>

  <main>
    <form action="" method="">
      <fieldset>
        <input class="search" type="text" name="search" placeholder="search for movies...">
      </fieldset>
    </form>
    <section class="wrapper">
      <section class="container">
        <h2>By Search</h2>
          <% searchResults[0].forEach(movie => { %>
          
            <form action="/add" method="POST">

              <article class="movie">
                <h3> <%= movie.title %> </h3>
                <img src="<%= movie.poster_path %>" alt="<%= movie.title %>">
              </article>

              <input type="hidden" name="title" value="<%= movie.title %>">
              <input type="hidden" name="image" value="<%= movie.image %>">

            </form>
            <button><a href="/search/<%= movie.title %>">See more Like this</a></button>
            <% }) %> 
       </section>
       <section class="container">
        <h2>By Genre</h2>
          <% searchResults[1].forEach(movie => { %>
          
            <form action="/add" method="POST">

